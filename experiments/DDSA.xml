<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system     threads="0" />

    <experiment length="1800"
                ticks_per_second="48"
                random_seed="120"/>
                
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <DSA_controller id="DSA"
                     library="build/source/DSA/libDSA_controller">
      <actuators>
	<differential_steering implementation="default"/>
      </actuators>

      <sensors>
        <footbot_proximity    implementation = "default" show_rays = "false"/>
        
	<positioning          implementation = "default"
                                        pos_noise_range= "-0.001:0.001"
                                        angle_noise_range= "-0.001:0.001"
                                        axis_noise_range= "-0.0001:0.0001"
					/>	

        <footbot_motor_ground implementation = "rot_z_only"/>
	
<!--
	<differential_steering implementation="default"
                                         vel_noise_range="-100.0:100.0"
                                         dist_noise_range="-100.0:100.0" 
					 />
-->
      </sensors>

      <params>

	<!-- Modify TargetDistanceTolerance to Simulate Error -->
        <settings ProbTargetDetection    = "0.1"
	              NumberOfRobots          = "3"
                  NumberOfSpirals         = "30"
                  NestDistanceTolerance = "0.01"  
                  NestAngleTolerance = "0.05"  
                  TargetDistanceTolerance = "0.01"  
                  TargetAngleTolerance = "0.05"
                  FoodDistanceTolerance   = "0.13"
                  SearcherGap             = "0.18"
		          SearchStepSize          = "0.08"
                  RobotForwardSpeed       = "8.0"
                  RobotRotationSpeed      = "10.0"
		          DestinationNoiseStdev = "0.0"
                  PositionNoiseStdev = "0.0"
                  CircuitToActivateAlgo = "1.0"
                  TargetStepsToActivateAlgo = "-1.0"
                  ResultsDirectoryPath = "results_Apurva/"/>
	          
      </params>

    </DSA_controller>

  </controllers>

  <loop_functions library = "build/source/DSA/libDSA_loop_functions"
                  label   = "DSA_loop_functions">

<!--    <DDSA PrintFinalScore = "1" FoodItemCount = "256"-->
<!--      FoodDistribution = "2"-->
<!--      NestRadius = "0.25"-->
<!--      />-->

<DDSA PrintFinalScore = "1" FoodItemCount = "64" FoodBoundsWidth="10" FoodBoundsHeight="10"
FoodDistribution = "1" ResultsPath = "results_Apurva/" NeighborRadius="2.0"
NestRadius = "0.4" ClusterCenter = "0,-2.5" RotationAngle = "40" WaypointDist = "0.5"
/>
<!--  <DDSA PrintFinalScore = "1" FoodItemCount = "256" FoodBoundsWidth="10" FoodBoundsHeight="10"-->
<!--  FoodDistribution = "1" ResultsPath = "results_Apurva/" NeighborRadius="2.0"-->
<!--  NestRadius = "0.4"-->
<!--  />-->

  </loop_functions>
        
  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="10.0, 10.0, 1" center="0,0,0.5">

    <floor id="floor" source="loop_functions" pixels_per_meter="10"/>

    <distribute>
      <position method="grid"
                center="0.0, 0.0, 0.0"
                distances="0.2, 0.2, 0.0"
                layout="2,15, 1" />
      <orientation method="constant" values="0.0, 0.0, 0.0" />
      <entity quantity="3" max_trials="100">
        <foot-bot id="DSA_">
          <controller config="DSA"/>
        </foot-bot>
      </entity>
    </distribute>

  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media />

   <!-- ****************** -->
   <!-- * Visualization *  -->
   <!-- ****************** -->
  <visualization>
    <qt-opengl>
      <camera>
        <placement idx="0" position="  0, 0, 10" look_at="0, 0, 0"  up="0, 1, 0" lens_focal_length="25"/>
        <placement idx="1" position="  0, 0, 4" look_at="0, 0, 0" up="0, 1, 0" lens_focal_length="30"/>
        <placement idx="2" position="  0, 0, 10" look_at="0, 0, 0" up="1, 1, 0" lens_focal_length="30"/>
        <placement idx="3" position="0.2,0.1,6" look_at="0.1,0.1,0" lens_focal_length="20" />
      </camera>
      <user_functions label="DSA_qt_user_functions"/>
    </qt-opengl>
  </visualization>

</argos-configuration>
